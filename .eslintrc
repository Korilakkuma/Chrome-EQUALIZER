{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": 1,
    "no-constant-condition": 0,
    "no-else-return": 1,
    "radix": 1,
    "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
    "quotes": [2, "single"],
    "semi": [1, "always"],
    "no-var": 2,
    "no-undef": 0,
    "no-case-declarations": 0
  }
}
